<Window x:Class="WidgetFons.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="FundWidget" Height="400" Width="600" WindowStyle="None" AllowsTransparency="True" Background="Transparent" MouseDown="Window_MouseDown" Topmost="True">
    <Grid>
        <Border Background="#CCFFFFFF" CornerRadius="10" Padding="10">
            <ListView x:Name="FundListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Fon Kodu" DisplayMemberBinding="{Binding FonKodu}" Width="100"/>
                        <GridViewColumn Header="Fon Adı" DisplayMemberBinding="{Binding FonAdi}" Width="200"/>
                        <GridViewColumn Header="Son Fiyat" DisplayMemberBinding="{Binding SonFiyat}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</Window>

